<%- include("layout", { 
  title: "Contact & Messages",
  body: `
    <div class="max-w-md mx-auto bg-gray-900 p-6 rounded-xl shadow-lg">
      <h2 class="text-3xl font-bold mb-4">Contact Us</h2>
      <form action="/contact" method="POST" class="space-y-4">
        <input type="text" name="name" placeholder="Your Name" class="w-full p-2 bg-darkbg border border-gray-600 rounded-md" required />
        <input type="email" name="email" placeholder="Email" class="w-full p-2 bg-darkbg border border-gray-600 rounded-md" required />
        <textarea name="message" placeholder="Message" class="w-full p-2 bg-darkbg border border-gray-600 rounded-md" rows="3" required></textarea>
        <button class="bg-accent px-4 py-2 rounded-lg text-darkbg hover:bg-lighttext">Send</button>
      </form>
    </div>
  `
}) %>
