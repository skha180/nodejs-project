<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#0F4C5C',
            darkbg: '#0a192f',
            lighttext: '#ccd6f6',
            accent: '#64ffda'
          }
        }
      }
    };
  </script>

  <!-- Font Awesome -->
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-darkbg text-lighttext min-h-screen">

  <!-- NAVBAR -->
  <nav class="bg-primary p-4 flex justify-between items-center shadow-lg">
    <h1 class="text-xl font-bold flex items-center gap-2">
      <i class="fa-solid fa-user-shield"></i> Admin Panel
    </h1>
    <ul class="flex gap-6">
      <li><span class="hover:text-accent"><i class="fa-solid fa-user"></i> <%= username %></span></li>
      <li><a href="/" class="hover:text-accent"><i class="fa-solid fa-house"></i> Home</a></li>
      <li><a href="/logout" class="hover:text-accent"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout</a></li>
    </ul>
  </nav>

  <!-- PAGE CONTENT -->
  <main class="container mx-auto py-10 px-4">
    <h2 class="text-4xl font-bold mb-6 text-center">Admin Dashboard</h2>

    <!-- USERS TABLE -->
    <div class="bg-gray-900 p-6 rounded-xl shadow-lg overflow-x-auto">
      <table class="table-auto w-full">
        <thead class="bg-primary text-lighttext">
          <tr>
            <th class="p-2">ID</th>
            <th class="p-2">Username</th>
            <th class="p-2">Email</th>
            <th class="p-2">Role</th>
            <th class="p-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
              <tr class="border-b border-gray-700">
                <td class="p-2"><%= user.id %></td>
                <td class="p-2"><%= user.username %></td>
                <td class="p-2"><%= user.email %></td>
                <td class="p-2"><%= user.role %></td>
                <td class="p-2 flex gap-3">
                  <a href="/admin/edit/<%= user.id %>" class="text-yellow-400 hover:text-white">
                    <i class="fa-solid fa-pen"></i>
                  </a>
                  <a href="/admin/delete/<%= user.id %>" class="text-red-500 hover:text-white">
                    <i class="fa-solid fa-trash"></i>
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center p-4">No users found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>

</body>
</html>
